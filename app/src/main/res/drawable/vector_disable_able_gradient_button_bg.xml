<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:angle="315" android:endColor="?attr/palette_button_primary_end" android:startColor="?attr/palette_button_primary_start" android:type="linear" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/palette_button_disable" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
