<resources>

<!--    &lt;!&ndash; splash screen theme &ndash;&gt;-->
    <style name="AppTheme.Splash" parent="AppTheme.Light">
        <item name="android:background">@drawable/tari_splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Auth" parent="AppTheme.Light">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--
      Style that makes a dialog placed to the bottom slide from bottom on show and to bottom on hide.
      Simply put - like on iOS.
    -->

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="SwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/tari_switch_compat_selector_thumb</item>
        <item name="track">@drawable/tari_switch_compat_selector_track</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/palette_system_red</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/palette_button_primary_start</item>
    </style>

    <style name="BottomSlideDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/BottomSlideDialogAnimation</item>
    </style>

    <style name="BottomSlideDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_to_bottom</item>
    </style>

    <style name="ChooseGIFDialog" parent="android:Theme.Panel">
        <item name="android:windowAnimationStyle">@style/ChooseGIFBottomSlideDialogAnimation</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ChooseGIFBottomSlideDialogAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>


    <!-- Google sign in activity transition overrides -->
    <style name="GoogleSignInActivity" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/font_heavy</item>
        <item name="android:textColor">?attr/palette_text_heading</item>
    </style>

</resources>
