        <item name="palette_primary_main">@color/palette_light_primary_main</item>

        <!--Neutral-->
        <item name="palette_neutral_primary">@color/palette_light_neutral_primary</item>
        <item name="palette_neutral_secondary">@color/palette_light_neutral_secondary</item>
        <item name="palette_neutral_tertiary">@color/palette_light_neutral_tertiary</item>
