        <!--Brand-->
        <item name="palette_brand_purple">@color/palette_light_brand_purple</item>
        <item name="palette_brand_pink">@color/palette_light_brand_pink</item>
        <item name="palette_brand_dark_blue">@color/palette_light_brand_dark_blue</item>

        <!--Buttons-->
        <item name="palette_button_primary">@color/palette_light_button_primary</item>
