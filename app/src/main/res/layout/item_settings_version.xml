<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/network_info_cta_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:background="@drawable/setting_option_background"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="@dimen/common_horizontal_margin">

    <com.tari.android.wallet.ui.component.tari.TariTextView
        android:id="@+id/network_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:letterSpacing="0.1"
        android:textColor="@color/settings_version_label"
        android:textSize="15sp"
        app:customFont="medium"
        tools:text="version text" />
</FrameLayout>