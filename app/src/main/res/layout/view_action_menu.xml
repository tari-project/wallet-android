<?xml version="1.0" encoding="utf-8"?>

<com.tari.android.wallet.ui.component.tari.TariAlphaBackground xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alphaBackground="0.7"
    app:backgroundColor="@color/black">

    <com.tari.android.wallet.ui.component.tari.TariAlphaBackground
        android:id="@+id/close_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        app:alphaBackground="0.7"
        app:backgroundColor="@color/white"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="16dp"
            android:src="@drawable/vector_close_opposite" />

    </com.tari.android.wallet.ui.component.tari.TariAlphaBackground>

    <com.tari.android.wallet.ui.component.tari.TariAlphaBackground
        android:id="@+id/change_side_button"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginEnd="-31dp"
        android:clickable="true"
        android:focusable="true"
        app:alphaBackground="0.2"
        app:backgroundColor="@color/white"
        app:cornerRadius="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:alpha="0.6"
            android:padding="15dp"
            android:src="@drawable/vector_sunny"
            android:tint="@color/black" />

    </com.tari.android.wallet.ui.component.tari.TariAlphaBackground>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/first_circle"
            android:layout_width="295dp"
            android:layout_height="295dp"
            android:alpha="0.4"
            android:background="@drawable/vector_avatar_line"
            android:elevation="50dp"
            android:translationX="-143dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/second_circle"
            android:layout_width="384dp"
            android:layout_height="384dp"
            android:alpha="0.4"
            android:background="@drawable/vector_avatar_line"
            android:elevation="50dp"
            android:translationX="-192dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--    avatar-->
        <com.tari.android.wallet.ui.component.tari.TariAlphaBackground
            android:id="@+id/root_avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="50dp"
            android:translationX="-114dp"
            app:alphaBackground="0.2"
            app:backgroundColor="#FFFFFF"
            app:cornerRadius="200dp"
            app:elevation="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/full_avatar_container"
                android:layout_width="228dp"
                android:layout_height="228dp"
                android:background="@drawable/vector_disable_able_gradient_button_bg_external"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:id="@+id/avatar_container"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginVertical="9dp"
                    android:background="@drawable/vector_avatar_bg_round"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/avatar"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="86dp"
                        android:translationY="-6dp"
                        tools:text="ðŸ¦Š" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/avatar_image_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="100dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/avatar_image"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:background="@drawable/vector_avatar_bg_round"
                            android:src="@drawable/vector_store_share"
                            tools:text="ðŸ¦Š" />

                    </androidx.cardview.widget.CardView>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.tari.android.wallet.ui.component.tari.TariAlphaBackground>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/menu_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

</com.tari.android.wallet.ui.component.tari.TariAlphaBackground>