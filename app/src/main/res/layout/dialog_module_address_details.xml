<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tari.android.wallet.ui.component.tari.TariTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8dp"
        android:text="@string/wallet_info_address_network"
        android:textColor="?attr/palette_text_heading"
        android:textSize="15sp"
        app:customFont="heavy" />

    <com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        app:cornerRadius="4dp">

        <com.tari.android.wallet.ui.component.tari.TariTextView
            android:id="@+id/text_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8dp"
            android:textColor="?attr/palette_text_body"
            android:textSize="14sp"
            app:customFont="medium"
            tools:text="🐢   MainNet" />
    </com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground>

    <com.tari.android.wallet.ui.component.tari.TariTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8dp"
        android:text="@string/wallet_info_address_features"
        android:textColor="?attr/palette_text_heading"
        android:textSize="15sp"
        app:customFont="heavy" />

    <com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        app:cornerRadius="4dp">

        <com.tari.android.wallet.ui.component.tari.TariTextView
            android:id="@+id/text_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8dp"
            android:textColor="?attr/palette_text_body"
            android:textSize="14sp"
            app:customFont="medium"
            tools:text="💤   One-sided payments only" />
    </com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground>

    <com.tari.android.wallet.ui.component.tari.TariTextView
        android:id="@+id/text_view_key_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8dp"
        android:text="@string/wallet_info_address_view_key"
        android:textColor="?attr/palette_text_heading"
        android:textSize="15sp"
        app:customFont="heavy" />

    <com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground
        android:id="@+id/container_view_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        app:cornerRadius="4dp">

        <com.tari.android.wallet.ui.component.tari.TariTextView
            android:id="@+id/text_view_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8dp"
            android:textColor="?attr/palette_text_body"
            android:textSize="17sp"
            app:customFont="medium"
            tools:text="💄🎥🎓🚗🎳🐛🚿💉🌴🧢🐵🎩👾👽🎃🤡👍🔮👒👽🎵👀🚨😷🎒👂👶🍄🏰🚑🍭" />
    </com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground>

    <com.tari.android.wallet.ui.component.tari.TariTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8dp"
        android:text="@string/wallet_info_address_spend_key"
        android:textColor="?attr/palette_text_heading"
        android:textSize="15sp"
        app:customFont="heavy" />

    <com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        app:cornerRadius="4dp">

        <com.tari.android.wallet.ui.component.tari.TariTextView
            android:id="@+id/text_spend_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8dp"
            android:textColor="?attr/palette_text_body"
            android:textSize="17sp"
            app:customFont="medium"
            tools:text="🐉🔋😎🔱🍟🚦🦆👃🐛🎼🛵🔮💋👙💦🍷👠🦀🐺🍪🚀🎮🎩👅🐔🐉🍍🥑💔📌🚧🐊" />
    </com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground>

    <com.tari.android.wallet.ui.component.tari.TariTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8dp"
        android:text="@string/wallet_info_address_checksum"
        android:textColor="?attr/palette_text_heading"
        android:textSize="15sp"
        app:customFont="heavy" />

    <com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        app:cornerRadius="4dp">

        <com.tari.android.wallet.ui.component.tari.TariTextView
            android:id="@+id/text_view_checksum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8dp"
            android:textColor="?attr/palette_text_body"
            android:textSize="17sp"
            app:customFont="medium"
            tools:text="🎤💍" />
    </com.tari.android.wallet.ui.component.tari.background.TariSecondaryBackground>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <com.tari.android.wallet.ui.component.tari.TariButton
            android:id="@+id/button_copy_base58"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_action_button_height"
            android:layout_weight="1"
            android:background="@drawable/vector_gradient_button_bg"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/wallet_info_address_button_copy_base58"
            android:textAllCaps="false"
            android:textColor="?attr/palette_text_button"
            android:textSize="16sp"
            app:customFont="heavy" />

        <androidx.legacy.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <com.tari.android.wallet.ui.component.tari.TariButton
            android:id="@+id/button_copy_emojis"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_action_button_height"
            android:layout_weight="1"
            android:background="@drawable/vector_gradient_button_bg"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/wallet_info_address_button_copy_emoji"
            android:textAllCaps="false"
            android:textColor="?attr/palette_text_button"
            android:textSize="16sp"
            app:customFont="heavy" />
    </LinearLayout>
</LinearLayout>
